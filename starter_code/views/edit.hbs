<h1>Edit the Movie</h1>

<form class="form-edit" action="/movies/{{foundMovie._id}}/edit" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="" value="{{foundMovie.title}}">
  <label for="director">Director</label>
  <input type="text" name="director" id="" value="{{foundMovie.director}}">
  <label for="description">Description</label>
  <input type="text" name="description" id="" value="{{foundMovie.description}}">
  <label for="image">Image</label>
  <input type="text" name="image" id="" value="{{foundMovie.image}}">
  <label for="stars">Stars</label>
  <input type="text" name="stars" id="" value="{{foundMovie.stars}}">
  <label for="showtimes">Showtimes</label>
  <input type="text" name="showtimes" id="" value="{{foundMovie.showtimes}}">
  <button class="edit-btn-submit" type="submit">Submit</button>
</form>